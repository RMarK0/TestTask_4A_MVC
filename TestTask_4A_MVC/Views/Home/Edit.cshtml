@model TestTask_4A_MVC.Models.Book
@{
    ViewData["Title"] = $"Edit {Model.Title}";
}

<h1>Редактировать информацию о книге @Model.Title</h1>
<!DOCTYPE html>
<html>
<head>
    <title>Редактирование информации</title>
</head>
<body>
<div>
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Название</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Publisher" class="control-label">Издатель</label>
            <input type="text" asp-for="Publisher" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Author" class="control-label">Автор</label>
            <input type="text" asp-for="Author" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DatePublished" class="control-label">Дата публикации</label>
            <input type="text" asp-for="DatePublished" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
</div>
</body>
</html>